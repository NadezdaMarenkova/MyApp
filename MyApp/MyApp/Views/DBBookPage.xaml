<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.Views.DBBookPage">
    <StackLayout>
            <Label Text="Book name" />
            <Entry Text="{Binding BookName}" />
            <Label Text="Author" />
            <Entry Text="{Binding Author}" />
            <Label Text="Genre" />
            <Entry Text="{Binding Genre}" />
            <Label Text="Has been read" />
            <CheckBox IsChecked="{Binding wasRead}" />
            <Label Text="A comment" />
            <Entry Text="{Binding Commentary}" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Save" Clicked="SaveBook" />
                <Button Text="Delete" Clicked="DeleteBook" />
                <Button Text="Cancel" Clicked="Cancel" />
            </StackLayout>
        </StackLayout>
</ContentPage>
    
    